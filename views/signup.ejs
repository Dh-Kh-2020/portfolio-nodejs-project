<!DOCTYPE html><html lang="en">
<head>
    <%- include('../component/log_head.ejs'); %>
	<title> singup<%#= title %> </title>
</head>
<body>
	<!-- ====== START HEADER ====== -->
	<%- include('../component/log_header.ejs'); %>
	<!-- ====== END HEADER ====== -->

	<!-- START SIGN UP -->
	<main class="signup-sec">
		<div class="container-lg">
			<section>
				<div class="m-auto  mt-lg-4">
					
					<div class="row">
						<div class="col-4 m-auto pt-2 border shadow">
							<form class="row g-3 needs-validation" action="/signup" method="post"> <!-- enctype="multipart/form-data" enctype="application/x-www-form-urlencoded" -->
								<div class="col-12">
									<h1 class="text-yellow fw-bold signup-hd">Sign Up</h1>
								</div>
								<div class="col-12 input-group flex-nowrap position-relative">
									<input type="text" name="fullname" id="fullname" class="form-control" placeholder="Full Name" aria-label="fullname" aria-describedby="addon-wrapping" required>
								</div>
								<div class="col-12 input-group flex-nowrap position-relative">
									<input type="text" name="username" id="username" class="form-control" placeholder="User Name" aria-label="username" aria-describedby="addon-wrapping" required>
								</div>
								<div class="col-12 input-group flex-nowrap position-relative">
									<input type="email" name="email" id="email" class="form-control" placeholder="Email" aria-label="email" aria-describedby="addon-wrapping" required>
								</div>
								<div class="col-12 input-group flex-nowrap position-relative">
									<input type="password" name="password" id="password" class="form-control" placeholder="Password" aria-label="password" aria-describedby="addon-wrapping" required>
								</div>
								<div class="col-12 input-group flex-nowrap position-relative">
									<input type="password" name="conf_password" id="conf_password" class="form-control" placeholder="Confirm Password" aria-label="password" aria-describedby="addon-wrapping" required>
								</div>
								<div class="col-12 input-group flex-nowrap position-relative">
									<input type="text" name="mobile" id="mobile" class="form-control" placeholder="Mobile NO." aria-label="mobile" aria-describedby="addon-wrapping" required>
								</div>
								<div class="col-12 input-group flex-nowrap position-relative">
									<input type="text" name="address" id="address" class="form-control" placeholder="Address" aria-label="address" aria-describedby="addon-wrapping" required>
								</div>
								<div> Gender : <br>
									<div class="col-4 flex-nowrap position-relative form-check-inline">
										<input type="radio" class="form-check-input" id="gender-female-id" name="gender" value="female">
										<label class="form-check-label text-muted ms-2" for="gender-female-id">Female</label>
									</div>
									<div class="col-4 flex-nowrap position-relative form-check-inline">
										<input type="radio" class="form-check-input" id="gender-male-id" name="gender" value="male"> 
										<label class="form-check-label text-muted ms-2" for="gender-male-id">Male</label>
										<div class="invalid-feedback">Gender is required</div>
									</div>
								</div>
								<div> Role : <br>
									<div class="col-4 flex-nowrap position-relative form-check-inline">
										<input type="radio" class="form-check-input" id="role-admin-id" name="role" value="admin">
										<label class="form-check-label text-muted ms-2" for="role-admin-id">Admin</label>
									</div>
									<div class="col-4 flex-nowrap position-relative form-check-inline">
										<input type="radio" class="form-check-input" id="role-user-id" name="role" value="user"> 
										<label class="form-check-label text-muted ms-2" for="role-user-id">User</label>
										<!-- <div class="invalid-feedback">Gender is required</div> -->
									</div>
								</div>
								<div class="mb-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="keep-signed">
                                        <label class="form-check-label fs-sm" for="keep-signed">I agree to the Terms of Use and Privacy Policy</label>
                                    </div>
									<div class="mt-3 text-end"><a class="nav-link-style fs-ms mt-5" href="">Forgot password?</a></div>
                                </div>
								<input class="btn btn-danger d-block w-100 rounded-pill" type="submit" value="Singn Up">
									
								<!-- <p class="fs-sm pt-3 mb-0">Do you have an account? <a href="register.html" class="fw-medium" data-view="#modal-signup-view">Sign up</a></p> -->
							</form>
						</div>
					</div>
				</div>
			</section>
		</div>
	</main>
	<!-- END SIGN UP -->

	<script src="../js/bootstrap.js"></script>
</body>
</html>